@import './vuetify'

@import './lazyload'

.page
  @extend .fade-transition

.duplet
  small
    display: block
    font-size: 50%
    line-height: 1.25

.preload
  background-color: rgba(255, 255, 255, .25)
  background-position: center
  background-repeat: no-repeat
  background-size: 20%
  background-image: url('/images/loading/0.svg')

